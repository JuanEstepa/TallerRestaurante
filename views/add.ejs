<!DOCTYPE html>
<html lang="en">
<%-include('./templates/header.ejs')%>
<body>
    
    
    <div class="container">
        <h1>Agregar plato</h1>

        <!--FORMULARIO-->

        <form>
            <div class="form-group my-4">
              <label for="nombre">Nombre:</label>
              <input type="text" class="form-control" id="nombre" placeholder="Ingrese el nombre del producto">
            </div>
            <div class="form-group my-2">
              <label for="precio">Precio:</label>
              <input type="text" class="form-control" id="precio" placeholder="Ingrese el precio del producto">
            </div>
            <div class="form-group my-2">
              <label for="descripcion">Descripción:</label>
              <textarea class="form-control" id="descripcion" rows="3" placeholder="Ingrese una breve descripción del producto"></textarea>
            </div>
            <div class="form-group my-2">
              <label for="tipo">Tipo:</label>
              <select class="form-control" id="tipo">
                <option value="Entrada">Entrada</option>
                <option value="Principal">Principal</option>
                <option value="Postre">Postre</option>
              </select>
            </div>
            <div class="form-group my-2">
              <label for="imagen">Imagen:</label>
              <input type="file" class="form-control-file" id="imagen">
            </div>
            <div class="row">
                <button type="submit" class="col btn btn-secondary m-2">Enviar</button>
                <a href="/" class="col btn btn-secondary m-2">Regresar</a>
            </div>
          </form>





        
    </div>
    
    <!--FOOTER QUE EJECTURA UN SCRIPT PARA EL BOOTSTRAP-->
    <%-include('./templates/footer.ejs')%>
</body>
</html>