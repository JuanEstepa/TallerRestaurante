<!DOCTYPE html>
<html lang="en">
<%-include('./templates/header.ejs')%>
<body>
    
    
    <div class="container">
        <h1>Agregar plato</h1>

        <!--FORMULARIO-->

        <form >
            <div class="form-group my-4">
                <label for="id">id: </label>
                <input type="number" class="form-control" id="id" value="<%=dishes.length +1 %>" readonly required>
              </div>
            <div class="form-group my-4">
              <label for="name">Nombre:</label>
              <input required type="text" class="form-control" id="name" placeholder="Ingrese el nombre del producto">
            </div>
            <div class="form-group my-2">
              <label for="price">Precio:</label>
              <input required type="number" class="form-control" id="price" placeholder="Ingrese el precio del producto">
            </div>
            <div class="form-group my-2">
              <label for="description">Descripción:</label>
              <textarea required class="form-control" id="description" rows="3" placeholder="Ingrese una breve descripción del producto"></textarea>
            </div>
            <div class="form-group my-2">
              <label for="type">Tipo:</label>
              <select required class="form-control" id="type">
                <option value="Entrada">Entrada</option>
                <option value="Principal">Principal</option>
                <option value="Postre">Postre</option>
              </select>
            </div>
            <div class="form-group my-4">
                <label for="image">Imagen:</label>
                <input required type="text" class="form-control" id="image" placeholder="Ingrese el link de la imagen a usar">
              </div>
            <div class="row">
                <button id="btnSend" type="submit" class="col btn btn-secondary m-2">Enviar</button>
                <a href="/" class="col btn btn-secondary m-2">Regresar</a>
            </div>
          </form>
    </div>
    
    <script src="script.js"></script>
    <!--FOOTER QUE EJECTURA UN SCRIPT PARA EL BOOTSTRAP-->
    <%-include('./templates/footer.ejs')%>
</body>
</html>